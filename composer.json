{
    "name": "geste/easy-command",
    "description": "gestes cli template based on symfony console and laminas container",
    "type": "library",
    "authors": [
        {
            "name": "Georg Steltner",
            "email": "georg.steltner@gmail.com"
        }
    ],
    "config": {
        "process-timeout" : 0,
        "sort-packages": true
    },
    "require": {
        "php": ">=8",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "geste/fluentpdo": "^4",
        "guzzlehttp/guzzle": "6.3.*",
        "laminas/laminas-config-aggregator": "^1.0",
        "laminas/laminas-servicemanager": "^3.3",
        "symfony/console": "*",
        "symfony/http-foundation": "^4.2",
        "symfony/process": "*"
    },
    "require-dev": {
        "behat/behat": "^3.6",
        "geste/easy-test": "*",
        "imbo/behat-api-extension": "^2.1",
        "phpmd/phpmd" : "@stable",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Easy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Easy\\": "tests/phpunit",
            "Behat\\": "tests/behat"
        }
    },
    "bin": ["bin/easy"]
}
